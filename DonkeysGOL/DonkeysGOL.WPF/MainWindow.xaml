<Window x:Class="DonkeysGOL.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DonkeysGOL.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
   
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <Canvas Margin="10" Grid.Column="0">
            
        </Canvas>

        <StackPanel Margin="8" Grid.Column="1">
            <Button Margin="0 35 0 0" x:Name="RestartButton" Width="80" Height="35" Content="Restart" Click="RestartButton_Click" />
            <TextBlock Margin="0 60 0 0" Text="Number of ticks: "/>
            <TextBox Margin="0 5" x:Name="NumberOfTicksTextBox"/>

            <Button Margin="0 10 0 0" x:Name="RunButton" Content="Run" />
        </StackPanel>
        
    </Grid>    
    
</Window>
