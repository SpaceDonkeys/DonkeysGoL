<Window x:Class="DonkeysGOL.WPF.SeedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DonkeysGOL.WPF"
        mc:Ignorable="d"
        Title="SeedWindow" Height="130" Width="250">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <StackPanel Margin="10" Grid.Column="0">
            <TextBlock Margin="0 -1 0 10" Text="Give Seed: " FontSize="15"/>
            <Button Content="Ok" Margin="0 1" x:Name="OkButton" Width="60" Height="30"/>
        </StackPanel>

        <StackPanel Margin="0 8 0 0" Grid.Column="1">
            <TextBox Margin="0 0 0 10" x:Name="ProvideSeedTextBox" Text="asdfafw"/>
            <Button Content="Random Seed" x:Name="RandomSeedButton" Width="120" Height="30" Margin="8,0"/>

        </StackPanel>

    </Grid>
</Window>
